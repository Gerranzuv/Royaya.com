@model IEnumerable<Royaya.com.Models.InterprationPath>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PLayout.cshtml";
}

<h2>@Resources.Global.Interpretation_Paths</h2>



<p style="float:right; text-decoration-color:white;">

    <button class="btn" style="background-color:#6610f2;color:white" onclick="location.href='@Url.Action("Create", "InterprationPaths")'">
        @Resources.Global.Add_path
    </button>

</p>
<div class="table-responsive ">
    <table class="table table-striped table-bordered table-hover " id="myTable">
        <thead style="background-color:#6610f2;color:white;font-weight:bold;align-content:center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>

                <th></th>
            </tr>
        </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                   
                    <td>
                        @Html.ActionLink(Resources.Dream.Edit, "Edit", new { id = item.id }) |
                        @Html.ActionLink(Resources.Dream.Details, "Details", new { id = item.id }) |
                        @Html.ActionLink(Resources.Dream.Delete, "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>
    </div>
