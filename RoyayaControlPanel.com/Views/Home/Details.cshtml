<br />

<div class="row">
    <div class="col-md-4"></div>
    @*<div class="col-md-4" style="align-content:center;text-align:center">
        <div style="background-color:dodgerblue;padding-left:25%;padding-right:25%;color:white;font-size:x-large;font-weight:bolder"> بيانات الطلب</div>
        <div> </div>
    </div>*@
    <div class="col-md-4"></div>
</div>
<br />
<br />

<div>

    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="card" style="direction:rtl;text-align:right;font-size:large;font-weight:bolder">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card-body" style="text-align:center">
                            <h5 class="card-title">@ViewBag.Type</h5>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card-body">
                            <h5 class="card-title" style="text-align:center"/>
                            @if (Model.Status == "Done")
                            {
                                <p>تم الرد<i class="glyphicon-alert"></i>  </p>
                            }
                            else
                            {
                                <p>لم يتم الرد بعد</p>
                            }
                                
                        
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-body" style="text-align:center">
                        <h5 class="card-title">التقييم @Model.UserRating</h5>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="col-md-1"></div>

</div>
</div>

<br />
<br />

<div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="card" style="direction:rtl;text-align:right;font-size:large;font-weight:bolder; margin-bottom:12px;">
                <h5 class="card-header" style="background-color :#007bff ; color:white;">صاحب الرؤية : @ViewBag.CreatorName</h5>
                <div class="card-body">
                    <h5 class="card-title">الرؤية رقم @Model.id</h5>
                    <p class="card-text">@Model.Description</p>
                    @*<a href="#" class="btn btn-primary">Go somewhere</a>*@
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>

    </div>

    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="card" style="direction:rtl;text-align:right">
                <h5 class="card-header" style="background-color :#007bff ; color:white;">المفسر : @ViewBag.InterpreterName &nbsp;&nbsp;&nbsp;&nbsp; @Model.ExplanationDate</h5>
                <div class="card-body" style="direction:rtl;text-align:right">
                    <h5 class="card-title">تفسير الرؤية</h5>
                    <p class="card-text">@Model.Explanation</p>
                    @*<a href="#" class="btn btn-primary">Go somewhere</a>*@
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>

    </div>
</body>
