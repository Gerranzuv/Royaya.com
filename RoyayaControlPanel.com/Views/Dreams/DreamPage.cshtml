@model Royaya.com.Models.Dream

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_PLayout_Public.cshtml";
}
<meta charset="utf-8" />


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="align-content:center;text-align:center">
        <div style="background-color:dodgerblue;padding-left:25%;padding-right:25%;color:white;font-size:x-large;font-weight:bolder"> بيانات الطلب</div>
