<br />

<div>

    <div class="row" >
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="card" style="direction:rtl;text-align:right;font-size:large;font-weight:bolder">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card-body" style="text-align:center">
                            <h5 class="card-title">@ViewBag.Type</h5>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card-body">
                            <h5 class="card-title" style="text-align:center">@if (Model.Status == "Done") {
                                <p>تم الرد<i class="glyphicon-alert"></i>  </p>
                            } else {
                                <p>لم يتم الرد بعد</p>
                            }</h5>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card-body" style="text-align:center">
                            <h5 class="card-title">التقييم @Model.UserRating</h5>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="col-md-1"></div>

    </div>
</div>

<br />
